version: '3'
services:
  server:
    image: {{ server_image }}
    container_name: urlshortner-server
    ports:
      - "5001:5001"
    environment:
      - NODE_ENV=production
      - DB=mongodb://mongo:27017/urlshortner_database
    depends_on:
      - mongo
    networks:
      - urlshortner-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5001/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  client:
    image: {{ client_image }}
    container_name: urlshortner-client
    ports:
      - "80:80"
    depends_on:
      - server
    environment:
      - REACT_APP_API_URL=http://localhost:5001/api
    networks:
      - urlshortner-network
    restart: unless-stopped

  mongo:
    image: mongo:latest
    container_name: urlshortner-mongo
    ports:
      - "27018:27017"
    volumes:
      - mongo-data:/data/db
    networks:
      - urlshortner-network
    restart: unless-stopped
    healthcheck:
      test: echo 'db.runCommand("ping").ok' | mongo localhost:27017/test --quiet
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 20s

networks:
  urlshortner-network:
    driver: bridge

volumes:
  mongo-data: