version: '3'
services:
  server:
    image: {{ dockerhub_username }}/{{ app_name }}-server:latest
    ports:
      - "{{ server_port }}:5001"
    networks:
      - urlshortner-network
    depends_on:
      - mongo
    environment:
      - DB=mongodb://mongo:27017/urlshortner_database
      - PORT=5001
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5001/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  client:
    image: {{ dockerhub_username }}/{{ app_name }}-client:latest
    ports:
      - "{{ client_port }}:80"
    networks:
      - urlshortner-network
    depends_on:
      - server
    environment:
      - REACT_APP_API_URL=http://{{ app_domain }}:{{ server_port }}/api
    restart: unless-stopped

  mongo:
    image: mongo:latest
    ports:
      - "{{ mongo_port }}:27017"
    networks:
      - urlshortner-network
    volumes:
      - mongo-data:/data/db
    restart: unless-stopped
    healthcheck:
      test: echo 'db.runCommand("ping").ok' | mongo localhost:27017/test --quiet
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 20s

networks:
  urlshortner-network:
    driver: bridge

volumes:
  mongo-data:
    driver: local
